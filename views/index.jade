doctype 5
html
	head
		title= title
		link(rel='stylesheet', href='/css/sine5.css')
		script(src="/js/dom.js")
		script(src="/socket.io/socket.io.js")
		script(src="http://d3js.org/d3.v3.js")
		script(src="/js/oscilloscope.js")
		script(src="/js/synth.js")
		script(src="/js/sine5.js")
		script
			window.onload = function(){
				sine5.init();
			}
	body
		div#chart
		h1= title

		form
			fieldset
				label volume
					input.volume(type="range", min=0, max=1, step=0.1, value=1)
				button.mute(value='mute') mute
			fieldset
				label pitch
					input.pitch(type="range", min=ranges.pitch.min, max=ranges.pitch.max)
				button.disconnect(value='disconnect') disconnect
			//-label reverb
				input.reverb(type="range", min=0, max=1024)


