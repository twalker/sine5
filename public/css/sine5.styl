$body-bg-color = rgba(0,0,0,0.95)
$light-green = lighten(green, 50%)
body
	padding: 10px
	font: 14px "Ubuntu", Helvetica, Arial, sans-serif
	background $body-bg-color
	color green

h1
	margin 0
#chart
	//padding:20px
	//border 1px solid #666
aside#note
	position absolute
	font-size 3em
	top 250px
	left 300px
	//color $light-green
	text-shadow $light-green 1px 1px 2px
	
	sub
		font-size 0.5em

fieldset
	border none
	float left
label
	text-align right

input[type=range]
	-webkit-appearance:none !important
	position relative
	top -3px
	height 3px
	background green
input[type="range"]::-webkit-slider-thumb
	-webkit-appearance:none !important
	background $light-green
	width 7px
	height 20px
	border-radius 2px

select
	color green

	background-color transparent
	option
		background-color $body-bg-color

button
	color $light-green
	border 1px solid green
	border-radius 3px
	background-color transparent
	&.active
		color #000
		background-color $light-green
#chart svg
	//background-color lighten(green, 25%)
	font-size 10px

.line
	fill none
	stroke lighten(green, 25%)
	stroke-width 1.5px
	//shape-rendering crispEdges

.axis path
.axis line
	fill none
	stroke green
	shape-rendering crispEdges

.axis text
	fill green
.hide
	display none